{
  "name": "Entity Linker",
  "description" : "Scarily Accurate Entity Linker",
  "version": "1.0",
  "manifest_version": 2,


  "background": {
    "page": "src/background.html",
    "persistent": false
  },



  "icons":{
    "128": "images/fincher.png",
    "48": "images/fincher.png",
    "16": "images/fincher.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/app.js"],
      "css": ["src/coupon.css"],
      "all_frames": true,
      "match_about_blank": true
    }],

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "<all_urls>",
    "tabs"
  ],
  "browser_action":
  {
    "default_popup": "src/home.html",
    "default_icon": "images/fincher.png"
  }
}